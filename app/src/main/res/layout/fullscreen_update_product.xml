<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Theme.NavDemo.toolbar"
            android:background="@color/darkNavy_blue_500"/>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/product_name"
            style="@style/Theme.NavDemo.edt"
            android:hint="@string/product_update"/>

        <TextView
            android:text="@string/color"
            style="@style/Theme.NavDemo.textViewRowProduct"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>
        <Spinner
            android:id="@+id/sp_color"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_gray_border" />


        <TextView
            android:text="@string/uom"
            style="@style/Theme.NavDemo.textViewRowProduct"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>
        <Spinner
            android:id="@+id/sp_uom"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_gray_border" />

        <TextView
            android:text="@string/group"
            style="@style/Theme.NavDemo.textViewRowProduct"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>
        <Spinner
            android:id="@+id/sp_group"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_gray_border" />


        <TextView
            android:text="@string/brand"
            style="@style/Theme.NavDemo.textViewRowProduct"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>
        <Spinner
            android:id="@+id/sp_brand"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_gray_border" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>