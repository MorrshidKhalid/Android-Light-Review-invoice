<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">


    <Spinner
        android:id="@+id/sp_group"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_gray_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_group"
        style="@style/Theme.NavDemo.smallBtnAdd"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/sp_group"
        app:layout_constraintStart_toEndOf="@+id/sp_group"
        app:layout_constraintTop_toTopOf="@+id/sp_group"
        android:contentDescription="@string/description_btn_add"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_group_setting"
        style="@style/Theme.NavDemo.smallBtnSetting"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/btn_setting"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_group"
        app:layout_constraintStart_toEndOf="@+id/btn_add_group"
        app:layout_constraintTop_toTopOf="@+id/btn_add_group"/>


    <Spinner
        android:id="@+id/sp_brand"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_gray_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_group" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_brand"
        style="@style/Theme.NavDemo.smallBtnAdd"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/description_btn_add"
        app:layout_constraintBottom_toBottomOf="@+id/sp_brand"
        app:layout_constraintStart_toEndOf="@+id/sp_brand"
        app:layout_constraintTop_toTopOf="@+id/sp_brand"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_brand_setting"
        style="@style/Theme.NavDemo.smallBtnSetting"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/btn_setting"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_brand"
        app:layout_constraintStart_toEndOf="@+id/btn_add_brand"
        app:layout_constraintTop_toTopOf="@+id/btn_add_brand"/>


    <Spinner
        android:id="@+id/sp_uom"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_gray_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_brand" />


    <Spinner
        android:id="@+id/sp_color"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_gray_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_uom" />


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_save_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/exBtnSave"
        app:icon="@drawable/baseline_save_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>